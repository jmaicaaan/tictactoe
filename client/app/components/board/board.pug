div(layout="row")
  md-card
    md-card-title
      md-card-title-text
        span.md-headline Tic tac toe
        span.md-subhead Large
    md-card-content
      .box-container
        .box(ng-repeat="box in $ctrl.boxes" ng-click="$ctrl.onUserClickBox(box);" ng-class="{'box-clicked': box.isClicked, 'ai-clicked': box.isAI}") 
          |  {{ $ctrl.displayToken(box); }}
    md-card-actions(layout="row", layout-align="end center")
      md-button(ng-click="$ctrl.resetBoxes();") Reset Game